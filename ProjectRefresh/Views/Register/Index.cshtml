@model ProjectRefresh.Models.MsCustomer;

@{
    ViewData["Title"] = "Home Page";
}

<div class="regContainer">
    <div class="regWrapper">
        <h1>Registrasi</h1>
        <form method="post" asp-controller="Register" asp-action="Index">
            <div class="formInput">
                <div class="registCredential">
                    <label for="username">Nama Lengkap</label>
                    <input type="text" asp-for="name" placeholder="Masukkan nama lengkap anda" class="inputFields" name="name" style="width: 100%;
    height: 2rem;
    border: 1px solid black;
    border-radius: 4px; padding-left: 0.5rem;" />
                    @if(ViewBag.NameError != null)
                    {
                        <span>@ViewBag.NameError</span>
                    }
                </div>
                <div class="registCredential">
                    <label for="email">Email</label>
                    <input type="email" asp-for="email" placeholder="Masukkan email anda" class="inputFields" name="email" style="width: 100%;
    height: 2rem;
    border: 1px solid black;
    border-radius: 4px;padding-left: 0.5rem;" />
                    @if (ViewBag.EmailError != null)
                    {
                        <span>@ViewBag.EmailError</span>
                    }
                </div>
                <div class="registCredential">
                    <label for="password">Password</label>
                    <input type="text" asp-for="password" placeholder="Masukkan password anda" class="inputFields" name="password" style="width: 100%;
    height: 2rem;
    border: 1px solid black;
    border-radius: 4px;padding-left: 0.5rem;" />
                    @if (ViewBag.PasswordError != null)
                    {
                        <span>@ViewBag.PasswordError</span>
                    }
                </div>
                <div class="registCredential">
                    <label for="re-password">Re-Password</label>
                    <input type="text" placeholder="Masukkan kembali password anda" name="repassword" class="inputFields" style="width: 100%;
    height: 2rem;
    border: 1px solid black;
    border-radius: 4px;padding-left: 0.5rem;" />
                </div>
                <div class="registCredential">
                    <label for="phone_number">Nomor Telepon</label>
                    <input type="text" asp-for="phone_number" placeholder="Masukkan nomor telepon anda" class="inputFields" name="phone_number" style="width: 100%;
    height: 2rem;
    border: 1px solid black;
    border-radius: 4px;padding-left: 0.5rem;" />
                    @if (ViewBag.PhoneNumberError != null)
                    {
                        <span>@ViewBag.PhoneNumberError</span>
                    }
                </div>
                <div class="registCredential">
                    <label for="address">Alamat</label>
                    <input type="text" asp-for="address" placeholder="Masukkan alamat anda" class="inputFields" name="address" style="width: 100%;
    height: 2rem;
    border: 1px solid black;
    border-radius: 4px;padding-left: 0.5rem;" />
                    @if (ViewBag.AddressError != null)
                    {
                        <span>@ViewBag.AddressError</span>
                    }
                </div> 
                <button type="submit" style="width: 7rem;height: 2.3rem;width: 100%;border: none;border-radius: 4px;font-family: ' Geologica', sans-serif; font-size: 1.3em; text-align:center; background-color: orange; color: white; cursor: pointer;">Registrasi</button>
                <label>Sudah punya akun? <a asp-action="Index" asp-controller="Login">Login disini</a></label>
            </div>
        </form>
    </div>
</div>